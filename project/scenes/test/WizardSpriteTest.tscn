@onready var sprite = $WizardSprite
var speed = 200.0
var current_direction = Vector2.ZERO

var sprite_textures = {}

func _ready():
	print('üßô‚Äç‚ôÇÔ∏è Wizard Sprite Test Scene Started!')
	
	# Cargar todos los sprites wizard
	sprite_textures['down'] = load('res://sprites/wizard/wizard_down.png')
	sprite_textures['up'] = load('res://sprites/wizard/wizard_up.png')
	sprite_textures['left'] = load('res://sprites/wizard/wizard_left.png')
	sprite_textures['right'] = load('res://sprites/wizard/wizard_right.png')
	
	# Configurar sprite inicial
	sprite.texture = sprite_textures['down']
	print('‚úÖ Sprites wizard cargados!')
	print('üéÆ Usa WASD para mover y probar los sprites')

func _process(delta):
	# Input de movimiento
	var input_dir = Input.get_vector('ui_left', 'ui_right', 'ui_up', 'ui_down')
	
	# Tambi√©n WASD
	if Input.is_action_pressed('ui_left') or Input.is_key_pressed(KEY_A):
		input_dir.x = -1
		sprite.texture = sprite_textures['left']
	elif Input.is_action_pressed('ui_right') or Input.is_key_pressed(KEY_D):
		input_dir.x = 1
		sprite.texture = sprite_textures['right']
		
	if Input.is_action_pressed('ui_up') or Input.is_key_pressed(KEY_W):
		input_dir.y = -1
		sprite.texture = sprite_textures['up']
	elif Input.is_action_pressed('ui_down') or Input.is_key_pressed(KEY_S):
		input_dir.y = 1
		sprite.texture = sprite_textures['down']
	
	# Mover
	if input_dir != Vector2.ZERO:
		position += input_dir * speed * delta
